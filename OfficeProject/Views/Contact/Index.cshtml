@model IEnumerable<OfficeProject.Models.Contact>

@{
    ViewData["Title"] = "Contacts";

    Pager pager = new Pager();
    int pageNo = 0;
    if(ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
}

<h1>Contacts</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-primary align-end">Create</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>City</th>
            <th>Skill</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var contact in Model)
        {
            <tr class="p-5 ">
                <td>@contact.Name</td>
                <td>@contact.Email</td>
                <td>@contact.City</td>
                <td>@contact.Skills</td>
                <td>
                    <a asp-action="Edit" class="btn btn-outline-success" asp-route-id="@contact.Id">Edit</a>
                    <form asp-action="Delete" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@contact.Id" />
                        <input type="submit" class="btn btn-outline-danger" value="Delete" onclick="return confirm('Are you sure you want to delete this contact?');" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="container">
    @if(pager.TotalPages > 0)
    {
        <ul class="pagination justify-content-center">
            @for (var pge = pager.StartPage; pge <= pager.EndPage; pge++)
            {
                <li class="page-item @(pge == pager.CurrentPage? "active":"")">
                    <a class="page-link" asp-asp-controller="Contact" asp-action="Index" asp-route-pg="@pge">@pge</a>
                </li>
            }
        </ul>
    }
</div>