@model OfficeProject.Models.Contact

<h1>Create Contact</h1>
<hr />

@using (Html.BeginForm("Create", "Contact", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Name)<br />
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Email)<br />
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.City)<br />
        @Html.TextBoxFor(m => m.City, new { @class = "form-control" })
        <span asp-validation-for="City" class="text-danger"></span>
    </div>
    <div class="form-group">
        @Html.Label("Skills")
        <div class="col-md-10">
            @foreach (var skill in new List<string> { "C#", "JavaScript", "Java", "Python" })
            {
                <label class="checkbox-inline">
                    <input type="checkbox" name="Skills" value="@skill" /> @skill
                </label>
            }
            <span asp-validation-for="Skills" class="text-danger"></span>
        </div>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-outline-success">Submit</button>
        <a asp-action="Index" asp-controller="Contact" class="btn btn-outline-primary ms-2">Back</a>
    </div>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
